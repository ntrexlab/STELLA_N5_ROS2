  </joint>

  <link name="base_scan"/>

  <joint name="scan2_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan2"/>
    <origin xyz="0.202 0.0 0.032" rpy="0.0 0.0 -1.57"/>
  </joint>

  <link name="base_scan2"/>

  <joint name="cam_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_frame_id"/>
    <origin xyz="0.236 0.0 0.159" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="camera_frame_id">
    <collision>
      <origin xyz="0.008 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.023 0.09 0.028"/>
